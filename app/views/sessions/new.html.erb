<% provide(:title, "Sign In") %>

<div class="span4 offset4">

	<h1>Sign-in</h1>

	<%= form_for(:sessions, url: sessions_path) do |f| %>

		<%= f.label 		:email %>
		<%= f.text_field 	:email %>

		<%= f.label 		:password %>
		<%= f.text_field 	:password %>

		<%= f.submit "Sign in", class: "btn btn-info btn-large" %>
		<p> Don't have an account? </p>
		<%= link_to "Sign up", signup_path, class: "btn btn-small" %>
	<% end %>

</div>