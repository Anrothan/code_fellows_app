<div class="row">
  <div class="span4 container">
  	<h2>Current Users</h2>
  	<h5>Join the Team!</h5>
	
	<ul>
		<% @user_list.reverse.each do |user| %>
			<div class="container users_list span4">
				<%= link_to image_tag("rails.png", alt: "Profile Picture"), user_path(user.id) %>
			    <li> <%=link_to "#{user.name}", user_path(user.id) %> </li>
			</div>
		<% end %>
	</ul>
  </div>
<div class="offset8">
  <div class="span4 container">
  	<h2>Sign-up</h2>

  	<%= form_for(@user) do |f| %>
  	  <%= render 'shared/error_messages' %>

  	  <%= f.label			:name %>
  	  <%= f.text_field 		:name %>

  	  <%= f.label			:email %>
  	  <%= f.text_field		:email %>

  	  <%= f.label			:password %>
  	  <%= f.password_field	:password %>

  	  <%= f.label			:password_confirmation, 'Confirmation' %>
  	  <%= f.password_field	:password_confirmation %>
  	
  	  <%= f.submit "Sign-up!", class: "btn btn-large btn-info" %>
  	<% end %>
  </div>
</div>